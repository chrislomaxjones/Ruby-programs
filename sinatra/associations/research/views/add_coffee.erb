<h1>Add a coffee</h1>

<form method="post">
	
	<label>Name:</label>
	<input type="text" placeholder="Name of coffee" name="name"><br>
	
	<label>Size:</label>
	<input type="number" placeholder="100" name="size"><label>ml</label><br>
	
	<label>Price:</label>
	<label>Â£</label><input type="number" placeholder="1.00" step="any" name="price"><br><br>
	
	
	<% 3.times do |i| %>
		<label>Flavour name</label>
		<input type="text" name="flavour-name-<%= i %>"><br>
		
		<label>Contains nuts</label>
		<input type="checkbox" name="flavour-contains-nuts-<%= i %>"><br><br>
	<% end %>
	
	<input type="submit" value="add coffee">
	
</form>